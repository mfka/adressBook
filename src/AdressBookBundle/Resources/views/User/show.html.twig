{% extends '::base.html.twig' %}

{% block body -%}
    <div class="center-block">

        <h1 class='page-header text-center'>User: {{ entity.name ~ ' ' ~ entity.surname }}</h1>

    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-condensed">
                    <tbody>
                    <tr>
                        <th>Id:</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Login:</th>
                        <td>{{ entity.login }}</td>
                    </tr>
                    <tr>
                        <th>Name:</th>
                        <td>{{ entity.name }}</td>
                    </tr>
                    <tr>
                        <th>Surname:</th>
                        <td>{{ entity.surname }}</td>
                    </tr>
                    <tr>
                        <th>Birth:</th
                        <td>{{ entity.birth|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    {% if entity.groups %}
                        <tr>
                            <th>Groups:</th>
                            <td>
                                <ul>
                                    {% for group in entity.groups %}
                                        <li><a href="{{ path('groups_show', {'id' : group.id}) }}">{{ group.name }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2 col-lg-offset-2">
                <a href="{{ path('') }}">
                    <button class="btn btn-success"><span class="glyphicon glyphicon-arrow-left"></span>
                        Back to the list
                    </button>
                </a>
            </div>
            <div class="col-lg-2 col-lg-offset-1">
                <a href="{{ path('_edit', { 'id': entity.id }) }}">
                    <button class="btn btn-default">Edit list</button>
                </a>
            </div>
            <div class="col-lg-2 col-lg-offset-1">
                {{ form(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
